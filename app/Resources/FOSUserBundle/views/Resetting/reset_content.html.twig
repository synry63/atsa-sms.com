{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': {'novalidate':'novalidate','class': 'fos_user_resetting_reset' } }) }}

        {{ form_label(form.plainPassword.first,'Nueva Contraseña') }}
        {% if form.plainPassword.first.vars.errors|length>0 %}
            <div class="alert alert-danger" role="alert">
                <div>
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
        {% endif %}
        {{ form_widget(form.plainPassword.first) }}

        {{ form_label(form.plainPassword.second,'Repita la Contraseña') }}
        <div class="tata">{{ form_errors(form.plainPassword.second) }}</div>
        {{ form_widget(form.plainPassword.second) }}
    <div>
        <input class="button" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
{{ form_end(form) }}
